from crontab import CronTab

user_cron = CronTab(user=True)

# Prank 1: Say poop every 30 minutes
poop = user_cron.new(command='say poop', comment='saypoop')
poop.minute.every(30)

# Prank 2: Open dog video every 6 hours
dog = user_cron.new(command='open https://www.youtube.com/watch?v=taWzoLpdxaI', comment='dogthing')
dog.setall('0 */6 * * *')

# Prank 3: Rickroll on reboot
rick = user_cron.new(command='open https://www.youtube.com/watch?v=dQw4w9WgXcQ', comment='rickroll')
rick.every_reboot()

# Enable and write them all
for job in [poop, dog, rick]:
    job.enable()

user_cron.write()
